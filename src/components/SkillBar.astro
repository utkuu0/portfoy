---
interface Props {
  name: string;
  icon: string;
  level: number; // 1-100
}

const { name, icon, level } = Astro.props;
---

<div class="glass glass-hover rounded-xl p-4 flex items-center gap-4">
  <span class="text-3xl">{icon}</span>
  <div class="flex-1">
    <div class="flex items-center justify-between mb-2">
      <span class="text-white font-medium">{name}</span>
      <span class="text-sm text-slate-400">{level}%</span>
    </div>
    <div class="h-2 bg-slate-700/50 rounded-full overflow-hidden">
      <div 
        class="h-full bg-gradient-to-r from-slate-300 to-slate-500 rounded-full transition-all duration-1000 ease-out"
        style={`width: ${level}%`}
      ></div>
    </div>
  </div>
</div>
