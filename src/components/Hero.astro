---
interface Props {
  name: string;
  title: string;
  description: string;
}

const { name, title, description } = Astro.props;
---

<section id="hero" class="min-h-screen flex items-center justify-center px-6 pt-20">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Greeting -->
    <div class="inline-flex items-center gap-2 glass rounded-full px-4 py-2 mb-8">
      <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
      <span class="text-sm text-slate-300">Yeni projelere açığım</span>
    </div>
    
    <!-- Main Heading -->
    <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
      Merhaba, ben <span class="gradient-text">{name}</span>
    </h1>
    
    <!-- Title -->
    <p class="text-2xl md:text-3xl text-slate-300 font-medium mb-6">
      {title}
    </p>
    
    <!-- Description -->
    <p class="text-lg text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
      {description}
    </p>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a 
        href="#projeler" 
        class="px-8 py-4 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full text-white font-semibold hover:shadow-xl hover:shadow-purple-500/30 transition-all duration-300 hover:scale-105 flex items-center gap-2"
      >
        <span>Projelerimi Gör</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
      
      <a 
        href="#hakkimda" 
        class="px-8 py-4 glass glass-hover rounded-full text-white font-semibold flex items-center gap-2"
      >
        <span>Hakkımda</span>
      </a>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="mt-20 animate-bounce">
      <svg class="w-6 h-6 mx-auto text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
